{
  "compilerOptions": {
    "composite": true,
    "target": "es2022",
    "module": "node16",
    "moduleResolution": "node16",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    // not included in strict mode but useful
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true
  }
}
