{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "build.js",
        "package.json",
        "tsconfig.json",
        "rollup.config.json",
        "src/**",
        "oboe/**"
      ],
      "outputs": ["dist/**", "npm/*/*.node", "npm/*/liboboe.so"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "release": {
      "dependsOn": ["^release"],
      "env": ["YARN_*", "GITHUB_*"],
      "outputs": []
    },
    "start": {
      "dependsOn": ["build"],
      "env": ["SW_APM_*"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["@solarwinds-apm/test#build", "build"],
      "env": ["SW_APM_*"],
      "inputs": ["package.json", "tsconfig.json", "src/**", "test/**"],
      "outputs": []
    }
  },
  "globalDependencies": [
    ".clang-format",
    ".prettierrc.json",
    ".yarnrc.yml",
    "tsconfig.base.json",
    "tsconfig.base.test.json",
    "yarn.lock",
    "packages/eslint-config/index.js",
    "packages/rollup-config/index.js"
  ]
}
